<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render 'books/list',user: @user %>
     <%= render 'books/new' %>
    </div>
    <div class="offset-md-1"></div>
    <div class="col-sm-8">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <%= link_to user_path(@user) do %>
             　　<% end %>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <form>
        <tbody>
          <tr>
            <% @books.each do |book| %>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%=link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
         <% end %>
        </tbody>
        </form>
      </table>
    </div>
  </div>
</div>


