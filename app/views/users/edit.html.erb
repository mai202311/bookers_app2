<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>User info</h1>
  		<%= form_with model: @user do |f| %>
  		<div class="form-group">
  		  <label for="inputName">Name</label></br>
  		  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
        </div>
        <div class="form-group">
          <label for="inputImage">ProfileImage</label></br>
          <%= f.text_field :opinion, placeholder: "Opinion" %>
        </div>
        <div class="form-group">
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
        </div>
        <div class="form-group">
           <label for="inputIntroduction">Introduction</label></br>
           <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction" %>
        </div>   
        <div class="form-group">
          <%= f.submit 'Update User' %>
          <% end %>
        </div>
    </div>
  </div>
</div>




  
  
  
  
  
  
 
  
  
  
  
<% end %>