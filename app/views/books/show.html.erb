<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list',user: @user %>
      <%= render 'books/new' %>
      </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
           <% if @book.present? %>
              <tr>
                <%= link_to user_path(@book.user.id) do %>
                <td><%= image_tag @book.user.get_profile_image(100,100) %><!-- profile_image --></td>
                    <% end %>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                <td><% if @book.user == current_user %></td>
                <td><%= link_to "Edit", edit_book_path(@book),class: "btn btn-success btn-block" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？",class: "btn btn-danger btn-block" %></td>
                     <% end %>
                     <% end %>
              </tr>
              <tr>
                <td><%= link_to @user.name, user_path(@user) %></td><!-- ユーザーネーム -->
              </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
