<h1>User info</h1>
 
 
  <%= image_tag current_user.get_profile_image(100,100) %>
 
 <div><%= current_user.user_name %></div>
  
 <% if @user == current_user %>
 <div><%= link_to 'Edit', user_path(current_user.id) %></div>
  <% end %>
  
  
<h1>New Book</h1>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Book detail</h1>
<% @books.each do |book| %>
<div>
  <%= link_to post_image_path(post_image.id) do %> <!-- profile_image -->
    <%= image_tag post_image.get_image %>
  <% end %>
</div>

  <span><%= book.title %></span>
  <span><%= book.opinion %></span>


<% end %>

<% if @user == current_user %>

<%= link_to "Edit", edit_book_path(book) %>

