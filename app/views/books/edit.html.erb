<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		<% if @book.errors.any? %>
      <%= @book.errors.count %>件のエラーが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
  　　</ul>
　　　<% end %>
  		<%= form_with model: @book do |f| %>
  		<div class="form-group">
  		  <label for="book_title">Title</label></br>
  		  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Name"%>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label></br>
          <%= f.text_field :body, placeholder: "Opinion" %>
        </div>
        <div class="form-group">
             <%= f.submit "Update Book",class: "btn btn-success btn-block" %>
             <% end %>
        </div>
        <div>
          <%= link_to "Show", "/books/#{@book.id}" %>
          |
          <%= link_to "Back", "/books" %>
          </div>
    </div>
  </div>
</div>

