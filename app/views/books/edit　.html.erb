<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"名前"%>
  <label for="inputOpinion">Opinion</label>
  <%= f.text_field :opinion, placeholder: "Opinion" %>  
  <%= f.submit "Update Book" %>
<% end %>

<span>
   <%= link_to "Show", "/books/#{@book.id}" %>
   |
    <%= link_to "Back", "/books" %>
  </span>
