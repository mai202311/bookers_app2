<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Sign up</h2>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
        <div class="field">
          <%= f.label :name, for: "inputName" %><br>
          <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %>
        </div>
        <div class="field">
          <%= f.label :email, for: "inputEmail" %><br>
          <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%>
        </div>
        <div class="field">
          <%= f.label :password %>
          <em>(6 characters minimum)</em>
          <br>
         <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br>
         <%= f.password_field :password_confirmation %>
        </div>
        <div class="actions">
         <%= f.submit "Sign up", class: "btn btn-success" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>